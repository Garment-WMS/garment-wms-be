model Material {
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @map("id") @db.Uuid
  materialTypeId String?   @map("material_type_id") @db.Uuid
  name           String?   @db.VarChar
  code           String?   @unique @db.VarChar
  width          Float?
  height         Float?
  length         Float?
  weight         Float?
  minQuantity    Float?    @map("min_quantity")
  unitId         String?   @map("unit_id") @db.Uuid
  createdAt      DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime? @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt      DateTime? @map("deleted_at") @db.Timestamptz(6)

  exportMaterialRequestDetail ExportMaterialRequestDetail[]
  importRequestDetail         ImportRequestDetail[]
  inspectionReportDetail      InspectionReportDetail[]
  materialType                MaterialType?                 @relation(fields: [materialTypeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  unit                        Unit?                         @relation(fields: [unitId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  materialAttribute           MaterialAttribute[]
  materialInspectionCriteria  MaterialInspectionCriteria[]
  materialReceipt             MaterialReceipt[]
  poDeliveryDetail            PoDeliveryDetail[]
  productFormula              ProductFormula[]

  @@map("material")
}
