model purchase_order {
  id                           String                     @id @db.Uuid
  PO_number                    String?                    @db.VarChar
  quarterly_production_plan_id String?                    @db.Uuid
  purchasing_staff_id          String?                    @db.Uuid
  shipping_address             String?                    @db.VarChar
  currency                     String?                    @db.VarChar
  total_ammount                Float?
  tax_amount                   Float?
  order_date                   DateTime?                  @db.Date
  expected_finish_date         DateTime?                  @db.Date
  finish_date                  DateTime?                  @db.Date
  status                       purchase_order_status?
  create_at                    DateTime?                  @db.Timestamptz(6)
  update_at                    DateTime?                  @db.Timestamptz(6)
  deleted_at                   DateTime?                  @db.Timestamptz(6)
  po_receipt                   po_receipt[]
  purchasing_staff             purchasing_staff?          @relation(fields: [purchasing_staff_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  quarterly_production_plan    quarterly_production_plan? @relation(fields: [quarterly_production_plan_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum purchase_order_status {
  PENDING
  FINISHED
}
