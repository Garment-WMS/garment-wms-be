model inspection_request {
  id                       String                     @id @db.Uuid
  purchasing_staff_id      String?                    @db.Uuid
  inspection_department_id String?                    @db.Uuid
  delivery_note_id         String?                    @db.Uuid
  notation                 String?
  status                   inspection_request_status?
  create_at                DateTime?                  @db.Timestamptz(6)
  update_at                DateTime?                  @db.Timestamptz(6)
  deleted_at               DateTime?                  @db.Timestamptz(6)
  delivery_note            delivery_note?             @relation(fields: [delivery_note_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  inspection_department    inspection_department?     @relation(fields: [inspection_department_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  purchasing_staff         purchasing_staff?          @relation(fields: [purchasing_staff_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum inspection_request_status {
  PENDING
  CANCELLED
  IN_PROGESS
  FINISHED
}
